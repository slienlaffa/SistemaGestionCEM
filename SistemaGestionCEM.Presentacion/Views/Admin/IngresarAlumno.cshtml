@model SistemaGestionCEM.Datos.ALUMNO

@{
    ViewBag.Title = "Nuevo Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var nacionalidades = new List<SelectListItem>();
    nacionalidades.Add(new SelectListItem
    {
        Text = "Chilena",
        Value = "Chilena"
    });
    nacionalidades.Add(new SelectListItem
    {
        Text = "Otra",
        Value = "Otra"
    });
}
@section scripts
    {
        <script type="text/javascript">
            $(function(){
                $("#model.PERSONA.CIUDAD.PAIS.COD_PAIS").change(function () {
                    $("#alumno-form").submit();
                });
            });

        </script>
    }

@section ContenidoCentral
{
<h2>Complete los datos del alumno en el formulario</h2>

@using (Html.BeginForm("IngresarAlumno", "Admin", FormMethod.Post, new { @id = "alumno-form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.PERSONA.NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PERSONA.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PERSONA.NOMBRE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PERSONA.APELLIDO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PERSONA.APELLIDO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PERSONA.APELLIDO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FECHA_NACIMIENTO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FECHA_NACIMIENTO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FECHA_NACIMIENTO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PERSONA.FK_COD_GENERO, "Genero", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PERSONA.FK_COD_GENERO, (SelectList)ViewBag.Generos, "Seleccione Genero", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PERSONA.FK_COD_GENERO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PERSONA.CORREO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PERSONA.CORREO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PERSONA.CORREO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PERSONA.TELEFONO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PERSONA.TELEFONO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PERSONA.TELEFONO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PERSONA.NACIONALIDAD, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PERSONA.NACIONALIDAD, nacionalidades, "Seleccione Nacionalidad", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PERSONA.NACIONALIDAD, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.PERSONA.CIUDAD.PAIS.DESCRIPCION, "País", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PERSONA.CIUDAD.PAIS.COD_PAIS, (SelectList)ViewBag.Paises, "Seleccione Pais", htmlAttributes: new { @class = "form-control", @id = "paises" })
                @Html.ValidationMessageFor(model => model.PERSONA.CIUDAD.PAIS.COD_PAIS, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group">
            @Html.LabelFor(model => model.PERSONA.FK_COD_CIUDAD, "Ciudad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PERSONA.FK_COD_CIUDAD, (SelectList)ViewBag.Ciudades, "Seleccione Ciudad", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PERSONA.FK_COD_CIUDAD, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.PERSONA.USUARIO.NOMBRE_USUARIO, "Nombre de Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PERSONA.USUARIO.NOMBRE_USUARIO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PERSONA.USUARIO.NOMBRE_USUARIO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PERSONA.USUARIO.CONTRASENNA, "Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PERSONA.USUARIO.CONTRASENNA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PERSONA.USUARIO.CONTRASENNA, "", new { @class = "text-danger" })
            </div>
            @if (ViewBag.Message != null)
            {
                <span class="text-danger">@ViewBag.Message</span>
            }
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ingresar" class="btn btn-default" />
                <input type="reset" value="Limpiar campos" class="btn btn-default" />
            </div>
            <br />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

}
