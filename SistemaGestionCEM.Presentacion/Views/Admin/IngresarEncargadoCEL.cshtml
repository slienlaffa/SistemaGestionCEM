            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FK_COD_CEL,"Centro de Estudio Local",  htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.FK_COD_CEL, (SelectList)ViewBag.FK_CEL, "Seleccione C.E.L", htmlAttributes: new { @class = "form-control" })
