@model SistemaGestionCEM.Datos.TIPO_USUARIO
@{
    ViewBag.Title = "SeleccionarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var usuarios = new List<SelectListItem>();

    usuarios.Add(new SelectListItem
    {
        Text = "Alumno",
        Value = "2"
    });
    usuarios.Add(new SelectListItem
    {
        Text = "Familia Anfitriona",
        Value = "3"
    });
    usuarios.Add(new SelectListItem
    {
        Text = "Encargado CEM",
        Value = "4"
    });
    usuarios.Add(new SelectListItem
    {
        Text = "Encargado CEL",
        Value = "5"
    });

}
@section ContenidoCentral

{
    @using (Html.BeginForm("SeleccionarUsuario", "Admin", FormMethod.Post, new { @class = "form-control"}))
    {
        <h2>Seleccione el tipo de usuario que desea crear</h2>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.DropDownListFor(modelItem => modelItem.COD_TIPO, usuarios, "Seleccione usuario",  htmlAttributes : new { @class = "form-control" })
  
        <input class="form-control" type="submit" name="btnSeleccionar" value="Seleccionar" />

        foreach (ModelState modelState in ViewData.ModelState.Values)
        {
            foreach (ModelError error in modelState.Errors)
            {
                @error.ErrorMessage;
            }
        }
    }
}
