@model SistemaGestionCEM.Datos.PERSONA

@{
    ViewBag.Title = "AutoRegistroAlumno";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //List items.

    List<SelectListItem> ListaNacionalidad = new List<SelectListItem>();
    ListaNacionalidad.Add(new SelectListItem
    {
        Text = "Chilena",
        Value = "Chilena"
    });
    ListaNacionalidad.Add(new SelectListItem
    {
        Text = "Peruana",
        Value = "Peruana"

    });
    ListaNacionalidad.Add(new SelectListItem
    {
        Text = "Boliviana",
        Value = "Boliviana"

    });

    List<SelectListItem> ListaGenero = new List<SelectListItem>();
    ListaGenero.Add(new SelectListItem
    {
        Text = "Femenino",
        Value = "Femenino"
    });
    ListaGenero.Add(new SelectListItem
    {
        Text = "Masculino",
        Value = "Masculino"

    });

    List<SelectListItem> ListaCiudad = new List<SelectListItem>();
    ListaCiudad.Add(new SelectListItem
    {
        Text = "Santiago",
        Value = "Santiago"
    });
    ListaCiudad.Add(new SelectListItem
    {
        Text = "Valparaiso",
        Value = "Valparaiso"

    });

    List<SelectListItem> ListaPaises = new List<SelectListItem>();
    ListaPaises.Add(new SelectListItem
    {
        Text = "Chile",
        Value = "Chile"
    });
    ListaPaises.Add(new SelectListItem
    {
        Text = "Argentina",
        Value = "Argentina"

    });
}


@section ContenidoCentral
{
    
    <h2>Registrarme como Alumno</h2>

    @using (Html.BeginForm("AutoRegistroAlumno", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <p>
                @ViewBag.Message
            </p>
            <h4>Ingrese sus datos como nuevo Alumno</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           
            <div class="form-group">
                @Html.LabelFor(model => model.NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.APELLIDO, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.APELLIDO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.APELLIDO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CORREO, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CORREO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CORREO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TELEFONO, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TELEFONO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TELEFONO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NACIONALIDAD, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.NACIONALIDAD, ListaNacionalidad, "::SELECCIONE::", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NACIONALIDAD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CIUDAD.PAIS, "PAIS", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.CIUDAD.PAIS, ListaPaises, "::SELECCIONE::", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CIUDAD.PAIS, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CIUDAD.DESCRIPCION, "Ciudad", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.CIUDAD.DESCRIPCION, ListaCiudad, "::SELECCIONE::", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CIUDAD.DESCRIPCION, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GENERO.DESCRIPCION, "GENERO", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.GENERO.DESCRIPCION, ListaGenero, "::SELECCIONE::",htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FK_COD_GENERO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.USUARIO.NOMBRE_USUARIO, "NOMBRE USUARIO", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.USUARIO.NOMBRE_USUARIO, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FK_COD_USUARIO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.USUARIO.CONTRASENNA, "CONTRASEÑA", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.USUARIO.CONTRASENNA, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.USUARIO.CONTRASENNA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ingresar" class="btn btn-default" />
                    <input type="reset" value="Limpiar campos" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Volver", "Index")
    </div>

}

