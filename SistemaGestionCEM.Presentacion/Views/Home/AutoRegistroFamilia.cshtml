@model SistemaGestionCEM.Datos.FAMILIA_ANFITRIONA

@{
    ViewBag.Title = "Registro Familias";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // List items para nacionalidad.
    var nacionalidades = new List<SelectListItem>();
    var tipoVivienda = new List<SelectListItem>();
    var estacionamiento = new List<SelectListItem>();

    estacionamiento.Add(new SelectListItem
    {
        Text = "Si",
        Value = "S"
    });
    estacionamiento.Add(new SelectListItem
    {
        Text = "No",
        Value = "N"
    });

    nacionalidades.Add(new SelectListItem
    {
        Text = "Chilena",
        Value = "Chilena"
    });
    nacionalidades.Add(new SelectListItem
    {
        Text = "Argentina",
        Value = "Argentina"
    });
    nacionalidades.Add(new SelectListItem
    {
        Text = "Otra",
        Value = "Otra"
    });

    tipoVivienda.Add(new SelectListItem
    {
        Text = "Casa",
        Value = "Casa"
    });
    tipoVivienda.Add(new SelectListItem
    {
        Text = "Departamento",
        Value = "Departamento"
    });

}

