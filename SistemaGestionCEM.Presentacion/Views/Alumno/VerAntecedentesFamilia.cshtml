@model SistemaGestionCEM.Datos.FAMILIA_ANFITRIONA

@{
    ViewBag.Title = "VerAntecedentesFamilia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ver antecedentes familia</h2>


<div>
    <h4>
        <a target="_blank" href="~/AntecedentesFamilia/@Model.COD_FAMILIA/@Model.ANTECEDENTES.CERT_ANTECEDENTES">Ver certificado de antecedentes</a>
        -
        <a target="_blank" href="~/AntecedentesFamilia/@Model.COD_FAMILIA/@Model.ANTECEDENTES.CERT_RESIDENCIA">Ver certificado residencia</a>
        -
        <a target="_blank" href="~/AntecedentesFamilia/@Model.COD_FAMILIA/@Model.ANTECEDENTES.CERT_LABORAL">Ver certificado laboral</a>
    </h4>
</div>
<hr />
<div class="container">
    <br>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">

            <div class="item active">
                <img src="~/AntecedentesFamilia/@Model.COD_FAMILIA/@Model.ANTECEDENTES.FOTO1" alt="Foto 1" width="460" height="345" />
            </div>

            @if (Model.ANTECEDENTES.FOTO2 != null)
            {
            <div class="item">
                <img src="~/AntecedentesFamilia/@Model.COD_FAMILIA/@Model.ANTECEDENTES.FOTO2" alt="Foto 2" width="460" height="345" />
            </div>
            }
            @if(Model.ANTECEDENTES.FOTO3 != null){
            <div class="item">
                <img src="~/AntecedentesFamilia/@Model.COD_FAMILIA/@Model.ANTECEDENTES.FOTO3" alt="Foto 3" width="460" height="345" />
            </div>
            }

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<hr />
<p>
    @Html.ActionLink("Volver a Familias", "FamiliasDisponibles")
</p>
